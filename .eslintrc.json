{
    "env": {
        "browser": true,
        "es2022": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "html"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "no-console": "off",
        "prefer-const": "warn",
        "eqeqeq": [
            "error",
            "always"
        ],
        "no-var": "error"
    },
    "ignorePatterns": [
        "dist/",
        "node_modules/",
        "*.min.js"
    ]
}