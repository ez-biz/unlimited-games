        "eslint-plugin-html": "^8.0.0",
        "rollup-plugin-visualizer": "^5.12.0",
        "terser": "^5.27.0",
        "vite": "^5.0.12"
    },
    "dependencies": {
        "three": "^0.160.0"
    },
    "engines": {
        "node": ">=18.0.0"
